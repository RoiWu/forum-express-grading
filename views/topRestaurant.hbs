<h1>Top10 人氣餐廳</h1>
<hr>

<div class="col-md-8" style="float:none;margin:auto;">
  {{#each restaurants}}
  <div class="card m-3 p-2">
    <div class="row align-items-center">
      <div class="col-md-4">
        <img class="img-responsive center-block" src="{{this.image}}" style="width: 150px;">
      </div>
      <div class="col-md-8">
        <h2>{{this.name}}</h2>
        <span class="badge badge-secondary">收藏數：{{this.FavoritedUsersCount}}</span>
        <p>{{this.description}}</p>
        <div class="row">
          <a class="m-1" href='/restaurants/{{this.id}}'>
            <button type="button" class="btn btn-primary">Show</button>
          </a>

          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
              class="btn btn-danger m-1">移除最愛</button></form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST"><button type="submit"
              class="btn btn-primary m-1">加到最愛</button>
          </form>
          {{/if}}

        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>